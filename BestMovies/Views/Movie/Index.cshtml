@model IList<Movie>
@{
    ViewData["Title"] = "Movies";
}
<h2>@ViewData["Title"]</h2>

<table class="table">
    
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>We don't have any customers yet</tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    <a asp-area="" asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
